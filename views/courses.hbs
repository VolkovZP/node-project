<h1>Курсы</h1>
{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s3 offset-3">
        <div class="card">
            <div class="card-image">
                <img src={{img}} alt={{title}}>
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}} UAH</p>
            </div>
            <div class="card-action">
                <a href="/courses/{{id}}">open course</a>
                <a href="/courses/{{id}}/edit?allow=true">edit</a>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p>None.</p>
{{/if}}