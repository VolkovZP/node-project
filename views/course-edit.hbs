<H1>Edit Course {{course.title}}</H1>

<form action="/courses/edit" method="POST">
    <div class="input-field ">
        <input placeholder="name of courses" name='title' id="title" type="text" class="validate" required
            value="{{course.title}}">
        <label for="first_name">Courses name</label>
        <span class="helper-text" data-error="enter name"></span>
    </div>
    <div class="input-field ">
        <input placeholder="price" name='price' id="price" type="number" class="validate" required min='1'
            value="{{course.price}}">
        <label for="price">Courses price</label>
        <span class="helper-text" data-error="enter price"></span>
    </div>
    <div class="input-field ">
        <input id="img" type="text" name='img' class="validate" required value="{{course.img}}">
        <label for="price">picture url</label>
        <span class="helper-text" data-error="enter url picture"></span>
    </div>
    <div class="input-field ">
        <input placeholder="description" name='description' id="description" type="text" class="validate"
            value="{{course.description}}">
        <label for="description">description course</label>
        <span class="helper-text" data-error="enter description"></span>
    </div>
    <input type="hidden" name='id' value="{{course.id}}">
    <button class="btn btn-primary">edit courses</button>
</form>